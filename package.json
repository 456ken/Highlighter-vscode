{
	"name": "multicolorhighlighter",
	"displayName": "MultiColorHighlighter",
	"description": "Highlighting keywords in the color you want.",
	"version": "1.0.0+build003",
	"publisher": "456ken",
	"engines": {
		"vscode": "^1.36.0"
	},
	"license": "SEE LICENSE IN LICENSE.txt",
	"repository": {
		"type": "git",
		"url": "https://github.com/456ken/Highlighter-vscode"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"highlight",
		"highlighter",
		"mark",
		"marker",
		"linemarker"
	],
	"icon": "mch.png",
	"activationEvents": [
		"*"
	],
	"main": "./out/src/extension",
	"contributes": {
		"commands": [
			{
				"command": "mch.AddKeyword",
				"title": "Add Keyword",
				"icon": {
					"dark": "resources/dark/plus.svg",
					"light": "resources/light/plus.svg"
				}
			},
			{
				"command": "mch.DeleteKeyword",
				"title": "Delete Keyword",
				"icon": {
					"dark": "resources/dark/cross.svg",
					"light": "resources/light/cross.svg"
				}
			},
			{
				"command": "mch.AddColor",
				"title": "Add color",
				"icon": {
					"dark": "resources/dark/plus.svg",
					"light": "resources/light/plus.svg"
				}
			},
			{
				"command": "mch.DeleteColor",
				"title": "Delete color",
				"icon": {
					"dark": "resources/dark/cross.svg",
					"light": "resources/light/cross.svg"
				}
			},
			{
				"command": "mch.ChangeColor",
				"title": "Change color"
			},
			{
				"command": "mch.SaveList",
				"title": "Save list"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "multicolorhighlighter",
					"title": "%mch.title%",
					"icon": "media/mch.svg"
				}
			]
		},
		"views": {
			"multicolorhighlighter": [
				{
					"id": "keywordlist",
					"name": "Keyword List"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "mch.AddKeyword",
					"when": "view == keywordlist && viewItem == highlighter",
					"group": "inline"
				},
				{
					"command": "mch.DeleteKeyword",
					"when": "view == keywordlist && viewItem == keyworditem",
					"group": "inline"
				},
				{
					"command": "mch.ChangeColor",
					"when": "view == keywordlist && viewItem == keyworditem"
				},
				{
					"command": "mch.ChangeColor",
					"when": "view == keywordlist && viewItem == highlighter"
				},
				{
					"command": "mch.DeleteColor",
					"when": "view == keywordlist && viewItem == highlighter",
					"group": "inline"
				}
			],
			"view/title": [
				{
					"command": "mch.AddColor",
					"when": "view == keywordlist"
				},
				{
					"command": "mch.SaveList",
					"when": "view == keywordlist"
				}
			]
		},
		"configuration": [
			{
				"title": "MultiColorHighlighter",
				"properties": {
					"multicolorhighlighter.upperlimit": {
						"type": "integer",
						"default": "100000",
						"description": "%multicolorhighlighter.description.upperlimit%"
					},
					"multicolorhighlighter.savelist": {
						"type": "object"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {},
	"devDependencies": {
		"typescript": "^2.6.1",
		"vscode": "^1.1.21",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}
